            <column name="PRODUCAO_GAS_TOTAL" label="Produção Gás Total"/>
            <column name="PRODUCAO_AGUA" label="Produção Água"/>
            <column name="PERIODO" label="Período"/>
            <column name="MES" label="Mês"/>
            <column name="ANO" label="Ano"/>
          </group>
        </table>
      </tables>
    </view> 
